{
    "extends": [
        "tslint-eslint-rules"
    ],
    "rules": {
        "eofline": true,
        "import-spacing": true,
        "ter-indent": [ true, 4, { "SwitchCase": 1 } ],
        "max-line-length": [ true, 120 ],
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "quotemark": [ true, "single", "jsx-double", "avoid-escape" ],
        "restrict-plus-operands": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "triple-equals": [ true, "allow-null-check" ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "semicolon": [true, "always"],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "lowercase-last"
            }
        ],
        "object-curly-spacing": [ true, "always" ]
    }
}
